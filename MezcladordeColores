package com.comandosclase;

import javax.swing.JOptionPane;

public class MezcladordeColores {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		
		String color1 = JOptionPane.showInputDialog("Ingrese el primer Color primario");
		String color2 = JOptionPane.showInputDialog("Ingrese el segundo Color primario");
		
		boolean esVerde = verificarColor1(color1,color2);
		boolean esLila = verificarColor1(color1,color2);
		boolean esNaranja=verificarColor1(color1,color2);
		
		
	}
	public static boolean verificarColor1(String color1, String color2) {
		boolean esVerde=true;
		
		if(color1.toUpperCase().equals("AZUL")&&color2.toUpperCase().equals("AMARILLO")) {
			JOptionPane.showMessageDialog(null, "La convinacion de ambos colores seria: Verde");
		}else if (color2.toUpperCase().equals("AZUL")&&color1.toUpperCase().equals("AMARILLO")) {
			JOptionPane.showMessageDialog(null, "La convinacion de ambos colores seria: Verde");
			
		return esVerde;}}
	
	
		 
	public static boolean verificarColor1(String color1, String color2) {
		boolean esLila=true;{
			
		if (color1.toUpperCase().equals("AZUL")&&color2.toUpperCase().equals("ROJO")) {
			JOptionPane.showMessageDialog(null, "La convinacion de ambos colores seria: Lila");
		} else if (color1.toUpperCase().equals("ROJO")&&color2.toUpperCase().equals("AZUL")) {
			JOptionPane.showMessageDialog(null, "La convinacion de ambos colores seria: Lila");

		
		return esLila;}}
		}
	
	
	
	public static boolean verificarColor1(String color1, String color2) {
		boolean esNaranja=true;
		
		if (color1.toUpperCase().equals("ROJO")&&color2.toUpperCase().equals("AMARILLO")) {
			JOptionPane.showMessageDialog(null, "La convinacion de ambos colores seria: Naranja");
		}else if (color1.toUpperCase().equals("AMARILLO")&&color2.toUpperCase().equals("ROJO")) {
			JOptionPane.showMessageDialog(null, "La convinacion de ambos colores seria: Naranja");
		}
		
		return esNaranja;
		
				
	}
	
}
